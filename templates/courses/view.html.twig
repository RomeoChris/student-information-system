{% extends 'base.html.twig' %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <br /> <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="card-box">
                        <h4 class="header-title m-t-0 text-center">{{ courseName }}</h4>
                        <br />
                        <p>Years: {{ years }}</p>
                        <p>Author: {{ author }}</p>
                        <p>Department: {{ department }}</p>
                        <a href="{{ path('editCourse', {'id':id}) }}" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                        <a href="{{ path('deleteCourse', {'id':id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
{% endblock %}
