{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card-box">
                <h4 class="header-title m-t-0 text-center">Add New Course</h4>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <br />

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="card-box">
                <form role="form" method="post" action="{{ path('newCourse') }}">
                    <div class="form-group">
                        <label for="coursename">Course name</label>
                        <input value="{{ courseName }}" name="courseName" type="text" class="form-control" id="coursename" placeholder="Enter course name">
                    </div>
                    <div class="form-group">
                        <label for="courses">Department</label>
                        <select class="form-control" name="departmentId" id="courses">
                            <option value="0"></option>
                            {% if departments %}
                                {% for department in departments %}
                                    <option value="{{ department.id }}">{{ department.name }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="years">Years</label>
                        <input value="{{ years }}" name="years" type="number" class="form-control" id="years">
                    </div>
                    <button type="submit" class="btn btn-info waves-effect waves-light">Save</button>
                </form>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>
{% endblock %}
