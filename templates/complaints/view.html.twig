{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <br /> <br />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card-box">
                <h4 class="header-title m-t-0 text-center">{{ title }}</h4>
                <br />
