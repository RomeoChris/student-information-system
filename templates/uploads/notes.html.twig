{% extends 'base.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card border-info">
            <div class="card-header text-center">
                <h4>{{ formHeader }}</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-info">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

{% endblock %}
