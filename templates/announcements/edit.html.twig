{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <br /> <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card-box">
                <h4 class="header-title m-t-0 text-center">{{ pageTitle }}</h4>
                <br />
                <form class="" action="{{ path('editAnnouncement', {'id':id}) }}" method="post">
                    <div class="form-group">
                        <label>Notice Title</label>
                        <input name='title' value="{{ title }}" type="text" class="form-control" required placeholder="Enter your title"/>
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <div>
                            <textarea name="message" required class="form-control">{{ message }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}
